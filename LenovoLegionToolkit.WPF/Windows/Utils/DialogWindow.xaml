<local:BaseWindow
    x:Class="LenovoLegionToolkit.WPF.Windows.Utils.DialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LenovoLegionToolkit.WPF.Windows"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:utils="clr-namespace:LenovoLegionToolkit.WPF.Utils"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{Binding Title}"
    Width="400"
    Height="260"
    MinWidth="400"
    MinHeight="260"
    AllowsTransparency="True"
    Background="Transparent"
    Closing="DialogWindow_Closing"
    ExtendsContentIntoTitleBar="True"
    FlowDirection="{x:Static utils:LocalizationHelper.Direction}"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None">

    <Border
        Background="Transparent"
        BorderThickness="0"
        CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="20"
                Direction="270"
                Opacity="0.4"
                ShadowDepth="0"
                Color="#CCCCCC" />
        </Border.Effect>
        <Border
            BorderBrush="{DynamicResource Wpf.Ui.Brush.Card.Background}"
            BorderThickness="1"
            CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <wpfui:TitleBar
                    Grid.Row="0"
                    Height="40"
                    Margin="0,0,0,0"
                    Background="Transparent"
                    CanMaximize="false"
                    ShowMaximize="false"
                    ShowMinimize="false"
                    UseSnapLayout="false" />

                <TextBlock
                    Grid.Row="0"
                    Margin="16,8,16,8"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="{Binding Title}" />

                <ScrollViewer
                    Grid.Row="1"
                    Margin="24,12,24,8"
                    VerticalScrollBarVisibility="Auto">
                    <TextBlock
                        FontSize="14"
                        LineHeight="22"
                        Text="{Binding Content}"
                        TextWrapping="Wrap" />
                </ScrollViewer>

                <CheckBox
                    x:Name="DontShowAgainCheckBox"
                    Grid.Row="2"
                    Margin="24,0,24,12"
                    HorizontalAlignment="Left"
                    Content="{x:Static resources:Resource.DialogWindow_DontShowAgain}"
                    Foreground="{DynamicResource Wpf.Ui.TextFillColorSecondaryBrush}"
                    Visibility="Hidden" />

                <StackPanel
                    Grid.Row="3"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <wpfui:Button
                        x:Name="YesButton"
                        Width="120"
                        Height="40"
                        Margin="12,0,12,0"
                        Appearance="Primary"
                        Click="YesButton_Click"
                        Content="{x:Static resources:Resource.Yes}"
                        CornerRadius="6"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Icon="Checkmark24" />
                    <wpfui:Button
                        x:Name="NoButton"
                        Width="120"
                        Height="40"
                        Margin="12,0,12,0"
                        Appearance="Secondary"
                        Click="NoButton_Click"
                        Content="{x:Static resources:Resource.No}"
                        CornerRadius="6"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Icon="Dismiss24" />
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</local:BaseWindow>