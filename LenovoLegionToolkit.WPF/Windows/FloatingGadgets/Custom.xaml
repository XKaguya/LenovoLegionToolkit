<Window
    x:Class="LenovoLegionToolkit.WPF.Windows.FloatingGadgets.Custom"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LenovoLegionToolkit.WPF.Windows.FloatingGadgets"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    Title="Customize Gadget Metrics"
    Width="350"
    Height="550"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="Margin" Value="0,6" />
        </Style>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,15" />
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#444444" />
            <Setter Property="Foreground" Value="#00AEEF" />
            <Setter Property="Margin" Value="0,10,0,0" />
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ItemsStackPanel" />
        </ScrollViewer>

        <Button
            Grid.Row="2"
            Margin="0,20,0,0"
            Padding="10,5"
            Background="#00AEEF"
            Click="CloseButton_Click"
            Content="{Binding Source={x:Static resources:Resource.Close}}"
            Foreground="White" />
    </Grid>
</Window>