<Window
    x:Class="LenovoLegionToolkit.WPF.Windows.Utils.FloatingGadgetUpper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LenovoLegionToolkit.WPF.Windows"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:utils="clr-namespace:LenovoLegionToolkit.WPF.Utils"
    Title="FloatingGadget"
    Height="25"
    Width="Auto" 
    Background="Transparent"
    AllowsTransparency="True"
    SizeToContent="Width"
    WindowStyle="None"
    ShowInTaskbar="False"
    WindowStartupLocation="Manual"
    Topmost="True">

    <Grid>
        <Border Background="#CC202020" CornerRadius="6" Padding="10, 4" Opacity="0.8"/>

        <Border CornerRadius="6" Padding="10,4" Background="Transparent">
            <Grid>
                <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>    <!-- CPU String -->
                <ColumnDefinition Width="Auto"/>    <!-- Frequency -->
                <ColumnDefinition Width="Auto"/>    <!-- Temperature -->
                <ColumnDefinition Width="Auto"/>    <!-- Power -->

                <ColumnDefinition Width="Auto"/>    <!-- Seperator -->

                <ColumnDefinition Width="Auto"/>    <!-- GPU String -->
                <ColumnDefinition Width="Auto"/>    <!-- Frequency -->
                <ColumnDefinition Width="Auto"/>    <!-- Temperature -->
                <ColumnDefinition Width="Auto"/>    <!-- VRAM Temperature -->
                <ColumnDefinition Width="Auto"/>    <!-- Power -->

                <ColumnDefinition Width="Auto"/>    <!-- Seperator -->

                <ColumnDefinition Width="Auto"/>    <!-- Memory String -->
                <ColumnDefinition Width="Auto"/>    <!-- Utulitization -->
                <ColumnDefinition Width="Auto"/>    <!-- Temperature -->

                <ColumnDefinition Width="Auto"/>    <!-- Seperator -->

                <ColumnDefinition Width="Auto"/>    <!-- Motherboard / PCH String -->
                <ColumnDefinition Width="Auto"/>    <!-- Temperature -->

                <ColumnDefinition Width="Auto"/>    <!-- Seperator -->

                <ColumnDefinition Width="Auto"/>    <!-- Fans String -->
                <ColumnDefinition Width="Auto"/>    <!-- CPU Fan -->
                <ColumnDefinition Width="Auto"/>    <!-- GPU Fan -->
                <ColumnDefinition Width="Auto"/>    <!-- PCH Fan -->
            </Grid.ColumnDefinitions>

                <!-- CPU -->
                <TextBlock Grid.Column="0" Text="{Binding Source={x:Static resources:Resource.FloatingGadgets_Cpu}}" Foreground="#FF5722" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,8,0" MinWidth="25"/>
                <TextBlock Grid.Column="1" x:Name="_cpuFrequency" Text="-" Foreground="White" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,8,0" MinWidth="40"/>
                <TextBlock Grid.Column="2" x:Name="_cpuTemperature" Text="-" Foreground="White" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,8,0" MinWidth="30"/>
                <TextBlock Grid.Column="3" x:Name="_cpuPower" Text="-" Foreground="White" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="30"/>

                <!-- Seperator -->
                <Rectangle Grid.Column="4" Width="1" Height="12" Margin="10,0" Fill="#555555" VerticalAlignment="Center"/>

                <!-- GPU -->
                <TextBlock Grid.Column="5" Text="{Binding Source={x:Static resources:Resource.FloatingGadgets_Gpu}}" Foreground="#4CAF50" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,8,0" MinWidth="25"/>
                <TextBlock Grid.Column="6" x:Name="_gpuFrequency" Text="-" Foreground="White" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,8,0" MinWidth="40"/>
                <TextBlock Grid.Column="7" x:Name="_gpuTemperature" Text="-" Foreground="White" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,8,0" MinWidth="30"/>
                <TextBlock Grid.Column="8" x:Name="_gpuVramTemperature" Text="-" Foreground="White" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,8,0" MinWidth="30"/>
                <TextBlock Grid.Column="9" x:Name="_gpuPower" Text="-" Foreground="White" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="30"/>

                <!-- Seperator -->
                <Rectangle Grid.Column="10" Width="1" Height="12" Margin="10,0" Fill="#555555" VerticalAlignment="Center"/>

                <!-- Memory -->
                <TextBlock Grid.Column="11" Text="{Binding Source={x:Static resources:Resource.SensorsControl_Memory_Title}}" Foreground="#FFC107" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,8,0" MinWidth="25"/>
                <TextBlock Grid.Column="12" x:Name="_memUsage" Text="-" Foreground="White" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,8,0" MinWidth="30"/>
                <TextBlock Grid.Column="13" x:Name="_memTemperature" Text="-" Foreground="White" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="30"/>

                <!-- Seperator -->
                <Rectangle Grid.Column="14" Width="1" Height="12" Margin="10,0" Fill="#555555" VerticalAlignment="Center"/>

                <!-- Motherboard / PCH -->
                <TextBlock Grid.Column="15" x:Name="_pchName" Text="{Binding Source={x:Static resources:Resource.FanCurveControl_PCH}}" Foreground="#9C27B0" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,8,0" MinWidth="25"/>
                <TextBlock Grid.Column="16" x:Name="_pchTemperature" Text="-" Foreground="White" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="30"/>

                <!-- Seperator -->
                <Rectangle Grid.Column="17" Width="1" Height="12" Margin="10,0" Fill="#555555" VerticalAlignment="Center"/>

                <!-- Fans -->
                <TextBlock Grid.Column="18" Text="{Binding Source={x:Static resources:Resource.FloatingGadgets_Fans}}" Foreground="#E91E63" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,8,0" MinWidth="25"/>
                <TextBlock Grid.Column="19" x:Name="_cpuFanSpeed" Text="-" Foreground="White" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,8,0" MinWidth="40"/>
                <TextBlock Grid.Column="20" x:Name="_gpuFanSpeed" Text="-" Foreground="White" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,8,0" MinWidth="40"/>
                <TextBlock Grid.Column="21" x:Name="_pchFanSpeed" Text="-" Foreground="White" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="40"/>
            </Grid>
        </Border>
    </Grid>
</Window>