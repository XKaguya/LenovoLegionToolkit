                                        <TextBlock
                                            x:Name="_memoryTemperatureLabel"
                                            Grid.Column="2"
                                            Style="{StaticResource DataValueStyle}"
                                            Text="-" />
                                        <ProgressBar
                                            x:Name="_memoryTemperatureBar"
                                            Grid.Column="3"
                                            Maximum="100"
                                            Style="{StaticResource CompactProgressBarStyle}"
                                            Value="0" />
                                    </Grid>
                                </StackPanel>
                                <Border
                                    x:Name="_seperator2"
                                    Height="1"
                                    Margin="0,0,0,12"
                                    Background="{DynamicResource CardStrokeColorDefaultBrush}" />
                                <StackPanel x:Name="_diskGrid" Margin="0,0,0,12">
                                    <TextBlock
                                        Margin="0,0,0,6"
                                        Style="{StaticResource CardTitleStyle}"
                                        Text="{x:Static resources:Resource.SensorsControl_Disk_Title}" />
                                    <Grid x:Name="_disk1TemperatureGrid">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Style="{StaticResource DataLabelStyle}"
                                            Text="{x:Static resources:Resource.SensorsControl_Disk_1_Temperature}" />
                                        <TextBlock
                                            x:Name="_disk1TemperatureLabel"
