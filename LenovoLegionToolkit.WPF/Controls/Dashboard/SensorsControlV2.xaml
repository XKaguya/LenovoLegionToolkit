                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Style="{StaticResource DataLabelStyle}"
                                        Text="{x:Static resources:Resource.SensorsControl_CoreClock_Title}" />
                                    <TextBlock
                                        x:Name="_gpuCoreClockLabel"
                                        Grid.Column="2"
                                        Margin="8,0,0,0"
                                        Style="{StaticResource DataValueStyle}"
                                        Text="-" />
                                    <ProgressBar
                                        x:Name="_gpuCoreClockBar"
                                        Grid.Column="3"
                                        Maximum="100"
                                        Style="{StaticResource CompactProgressBarStyle}"
                                        Value="0" />
                                </Grid>
                                <Grid x:Name="_gpuFanSpeedGrid" Margin="0,6,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Style="{StaticResource DataLabelStyle}"
                                        Text="{x:Static resources:Resource.SensorsControl_Fan_Title}" />
                                    <TextBlock
                                        x:Name="_gpuFanSpeedLabel"
                                        Grid.Column="2"
                                        Style="{StaticResource DataValueStyle}"
                                        Text="-" />
                                    <ProgressBar
                                        x:Name="_gpuFanSpeedBar"
                                        Grid.Column="3"
                                        Maximum="5000"
                                        Style="{StaticResource CompactProgressBarStyle}"
                                        Value="0" />
                                </Grid>
                                <Grid x:Name="_gpuTemperatureGrid" Margin="0,6,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource DataLabelStyle}"
                                        Text="{x:Static resources:Resource.SensorsControl_GpuCore_Title}" />
                                    <TextBlock
                                        x:Name="_gpuCoreTemperatureLabel"
                                        Grid.Column="1"
                                        Margin="40,0,0,0"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource DataValueStyle}"
                                        Text="-" />
                                    <TextBlock
                                        Grid.Column="2"
                                        Margin="15,0,0,0"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource DataLabelStyle}"
                                        Text="{x:Static resources:Resource.SensorsControl_GpuMemoryTemperature_Title}" />
                                    <TextBlock
                                        x:Name="_gpuMemoryTemperatureLabel"
                                        Grid.Column="3"
                                        Margin="40,0,0,0"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource DataValueStyle}"
                                        Text="-" />
                                </Grid>
                                <!--
                                <Grid x:Name="_gpuTemperatureGrid" Margin="0,6,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Style="{StaticResource DataLabelStyle}" Text="{x:Static resources:Resource.SensorsControl_GpuCore_Title}"/>
                                    <TextBlock x:Name="_gpuCoreTemperatureLabel" Grid.Column="2" Style="{StaticResource DataValueStyle}" Text="-"/>
                                    <ProgressBar x:Name="_gpuCoreTemperatureBar" Grid.Column="3" Style="{StaticResource CompactProgressBarStyle}" Value="0" Maximum="100"/>
                                </Grid>
                                -->
                                <Grid x:Name="_gpuPowerGrid" Margin="0,6,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Style="{StaticResource DataLabelStyle}"
                                        Text="{x:Static resources:Resource.SensorsControl_GPU_Power}" />
                                    <TextBlock
                                        x:Name="_gpuPowerLabel"
                                        Grid.Column="2"
                                        Style="{StaticResource DataLabelStyle}"
                                        Text="-" />
                                </Grid>
                            </StackPanel>
                        </Border>
                        <Border x:Name="_motherboardCard" Style="{StaticResource SensorCardStyle}">
                            <StackPanel Margin="12,10">
                                <StackPanel x:Name="_pchStackPanel" Margin="0,0,0,12">
                                    <TextBlock
                                        Margin="0,0,0,6"
                                        Style="{StaticResource CardTitleStyle}"
                                        Text="{x:Static resources:Resource.SensorsControl_Motherboard_Title}" />
                                    <Grid x:Name="_pchFanSpeedGrid">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Style="{StaticResource DataLabelStyle}"
                                            Text="{x:Static resources:Resource.SensorsControl_Fan_Title}" />
                                        <TextBlock
                                            x:Name="_pchFanSpeedLabel"
                                            Grid.Column="2"
                                            Style="{StaticResource DataValueStyle}"
                                            Text="-" />
                                        <ProgressBar
                                            x:Name="_pchFanSpeedBar"
                                            Grid.Column="3"
                                            Maximum="5000"
                                            Style="{StaticResource CompactProgressBarStyle}"
                                            Value="0" />
                                    </Grid>
                                    <Grid x:Name="_pchTemperatureGrid" Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            x:Name="_pchGridName"
                                            Grid.Column="0"
                                            Style="{StaticResource DataLabelStyle}"
                                            Text="{x:Static resources:Resource.SensorsControl_PchTemperature_Title}" />
                                        <TextBlock
                                            x:Name="_pchTemperatureLabel"
                                            Grid.Column="2"
                                            Style="{StaticResource DataValueStyle}"
                                            Text="-" />
                                        <ProgressBar
                                            x:Name="_pchTemperatureBar"
                                            Grid.Column="3"
                                            Maximum="100"
                                            Style="{StaticResource CompactProgressBarStyle}"
                                            Value="0" />
                                    </Grid>
                                </StackPanel>
                                <Border
                                    x:Name="_seperator1"
                                    Height="1"
                                    Margin="0,0,0,12"
                                    Background="{DynamicResource CardStrokeColorDefaultBrush}" />
                                <StackPanel x:Name="_batteryGrid">
                                    <TextBlock
                                        Margin="0,0,0,6"
                                        Style="{StaticResource CardTitleStyle}"
                                        Text="{x:Static resources:Resource.SensorsControl_Battery_Title}" />
                                    <Grid x:Name="_batteryStateGrid">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Style="{StaticResource DataLabelStyle}"
                                            Text="{x:Static resources:Resource.SensorsControl_State_Title}" />
                                        <TextBlock
                                            x:Name="_batteryStateLabel"
                                            Grid.Column="2"
                                            Style="{StaticResource DataValueStyle}"
                                            Text="-" />
                                    </Grid>
                                    <Grid x:Name="_batteryLevelGrid" Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Style="{StaticResource DataLabelStyle}"
                                            Text="{x:Static resources:Resource.SensorsControl_BatteryLevel_Title}" />
                                        <TextBlock
                                            x:Name="_batteryLevelLabel"
                                            Grid.Column="2"
                                            Style="{StaticResource DataValueStyle}"
                                            Text="-" />
                                        <ProgressBar
                                            x:Name="_batteryLevelBar"
                                            Grid.Column="3"
                                            Maximum="100"
                                            Style="{StaticResource CompactProgressBarStyle}"
                                            Value="0" />
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border x:Name="_memoryDiskCard" Style="{StaticResource SensorCardStyle}">
                            <StackPanel Margin="12,10">
                                <StackPanel x:Name="_memoryGrid" Margin="0,0,0,12">
                                    <TextBlock
                                        Margin="0,0,0,6"
                                        Style="{StaticResource CardTitleStyle}"
                                        Text="{x:Static resources:Resource.SensorsControl_Memory_Title}" />
                                    <Grid x:Name="_memoryUtilizationGrid">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
