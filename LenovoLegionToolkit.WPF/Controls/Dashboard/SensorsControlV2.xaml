                                    <Grid x:Name="_disk2TemperatureGrid" Margin="0,6,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Style="{StaticResource DataLabelStyle}"
                                            Text="{x:Static resources:Resource.SensorsControl_Disk_2_Temperature}" />
                                        <TextBlock
                                            x:Name="_disk2TemperatureLabel"
                                            Grid.Column="2"
                                            Style="{StaticResource DataValueStyle}"
                                            Text="-" />
                                        <ProgressBar
                                            x:Name="_disk2TemperatureBar"
                                            Grid.Column="3"
                                            Maximum="100"
                                            Style="{StaticResource CompactProgressBarStyle}"
                                            Value="0" />
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </wpfui:CardControl.Content>
            </wpfui:CardControl>
        </ScrollViewer>
    </Grid>
</UserControl>