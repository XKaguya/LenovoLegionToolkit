<UserControl
    x:Class="LenovoLegionToolkit.WPF.Controls.Dashboard.SensorsControlV2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:LenovoLegionToolkit.WPF.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="SensorCardStyle" TargetType="Border">
            <Setter Property="Margin" Value="0,0,16,0" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
            <Setter Property="Width" Value="250" />
            <Setter Property="Height" Value="170" />
        </Style>

        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="DataLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        </Style>

        <Style x:Key="DataValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        </Style>

        <Style x:Key="CompactProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="6" />
            <Setter Property="Margin" Value="4,0,0,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="#0288D1" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <wpfui:CardControl HorizontalAlignment="Center">
                <wpfui:CardControl.Content>
                    <StackPanel behaviors:DragDropBehavior.IsEnabled="True" Orientation="Horizontal">
                        <Border x:Name="_cpuCard" Style="{StaticResource SensorCardStyle}">
                            <StackPanel Margin="12,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Style="{StaticResource CardTitleStyle}"
                                        Text="{x:Static resources:Resource.SensorsControl_CPU_Title}" />
                                    <TextBlock
                                        x:Name="_cpuCardName"
                                        Grid.Column="1"
                                        Margin="8,0,0,12"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource DataLabelStyle}"
                                        Text="-" />
                                </Grid>
                                <Grid x:Name="_cpuUtilizationGrid">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Style="{StaticResource DataLabelStyle}"
                                        Text="{x:Static resources:Resource.SensorsControl_Utilization_Title}" />
                                    <TextBlock
                                        x:Name="_cpuUtilizationLabel"
                                        Grid.Column="2"
                                        Margin="8,0,0,0"
                                        Style="{StaticResource DataValueStyle}"
                                        Text="-" />
                                    <ProgressBar
                                        x:Name="_cpuUtilizationBar"
                                        Grid.Column="3"
                                        Maximum="100"
                                        Style="{StaticResource CompactProgressBarStyle}"
                                        Value="0" />
                                </Grid>
                                <Grid x:Name="_cpuCoreClockGrid" Margin="0,6,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Style="{StaticResource DataLabelStyle}"
                                        Text="{x:Static resources:Resource.SensorsControl_CoreClock_Title}" />
                                    <TextBlock
                                        x:Name="_cpuCoreClockLabel"
                                        Grid.Column="2"
                                        Margin="8,0,0,0"
                                        Style="{StaticResource DataValueStyle}"
                                        Text="-" />
                                    <ProgressBar
                                        x:Name="_cpuCoreClockBar"
                                        Grid.Column="3"
                                        Maximum="100"
                                        Style="{StaticResource CompactProgressBarStyle}"
                                        Value="0" />
                                </Grid>
                                <Grid x:Name="_cpuFanSpeedGrid" Margin="0,6,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Style="{StaticResource DataLabelStyle}"
                                        Text="{x:Static resources:Resource.SensorsControl_Fan_Title}" />
                                    <TextBlock
                                        x:Name="_cpuFanSpeedLabel"
                                        Grid.Column="2"
                                        Style="{StaticResource DataValueStyle}"
                                        Text="-" />
                                    <ProgressBar
                                        x:Name="_cpuFanSpeedBar"
                                        Grid.Column="3"
                                        Maximum="5000"
                                        Style="{StaticResource CompactProgressBarStyle}"
                                        Value="56" />
                                </Grid>
                                <Grid x:Name="_cpuTemperatureGrid" Margin="0,6,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Style="{StaticResource DataLabelStyle}"
                                        Text="{x:Static resources:Resource.SensorsControl_Temperature_Title}" />
                                    <TextBlock
                                        x:Name="_cpuTemperatureLabel"
                                        Grid.Column="2"
                                        Style="{StaticResource DataValueStyle}"
                                        Text="-" />
                                    <ProgressBar
                                        x:Name="_cpuTemperatureBar"
                                        Grid.Column="3"
                                        Maximum="100"
                                        Style="{StaticResource CompactProgressBarStyle}"
                                        Value="0" />
                                </Grid>
                                <Grid x:Name="_cpuPowerGrid" Margin="0,6,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Style="{StaticResource DataLabelStyle}"
                                        Text="{x:Static resources:Resource.SensorsControl_CPU_Power}" />
                                    <TextBlock
                                        x:Name="_cpuPowerLabel"
                                        Grid.Column="2"
                                        Style="{StaticResource DataLabelStyle}"
                                        Text="-" />
                                </Grid>
                            </StackPanel>
                        </Border>
                        <Border x:Name="_gpuCard" Style="{StaticResource SensorCardStyle}">
                            <StackPanel Margin="12,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
