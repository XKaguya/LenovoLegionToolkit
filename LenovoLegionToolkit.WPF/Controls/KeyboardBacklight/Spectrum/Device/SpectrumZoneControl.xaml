<UserControl
    x:Class="LenovoLegionToolkit.WPF.Controls.KeyboardBacklight.Spectrum.Device.SpectrumZoneControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RenderTransform>
            <TransformGroup>
                <RotateTransform x:Name="_rotateTransform" Angle="0"/>
                <!-- 可以添加其他变换如ScaleTransform等 -->
            </TransformGroup>
        </Grid.RenderTransform>
        <Border
            x:Name="_background"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderThickness="4"
            CornerRadius="4" />
        <ToggleButton
            x:Name="_button"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />
    </Grid>
</UserControl>
